# Backend
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=replace-with-strong-password
POSTGRES_DB=rag
DATABASE_URL=postgresql+psycopg2://rag_user:replace-with-strong-password@db:5432/rag
SECRET_KEY=replace-with-strong-secret
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=replace-with-admin-password
DOCS_PATH=/data/documents
INDEXES_PATH=/data/indexes
CORS_ORIGINS=https://your-domain.example
DB_HOST=db
DB_PORT=5432
# Must match POSTGRES_USER.
DB_USER=rag_user

# LLM settings
# Use "stub" for offline mode or "ollama" to enable Ollama.
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen3:4b-instruct
OLLAMA_FALLBACK_MODEL=qwen2.5:3b-instruct
OLLAMA_TEMPERATURE=0.1
OLLAMA_TOP_P=0.9
OLLAMA_TOP_K=40
OLLAMA_REPEAT_PENALTY=1.05
OLLAMA_NUM_PREDICT=512
# Optional: set to non-negative integer to enable deterministic sampling.
OLLAMA_SEED=
# Optional: comma-separated stop sequences.
OLLAMA_STOP=
RETRIEVE_K_FOR_LLM=12
LLM_SOURCES_K=7
UI_SOURCES_K=5
LLM_EXCERPT_CHARS=1200
LLM_SOURCES_CHAR_LIMIT=9000

# Frontend
# Uses /api relative path via reverse proxy; no runtime env needed.
